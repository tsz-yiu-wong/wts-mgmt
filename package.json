{
  "name": "whatsapp-multi-account-manager",
  "version": "1.0.0",
  "description": "WhatsApp多账号管理应用",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "nodemon --exec electron . --watch src/main",
    "dev:renderer": "vite",
    "build": "vite build && electron-builder",
    "build:renderer": "vite build",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": ["whatsapp", "multi-account", "electron"],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "playwright": "^1.40.0",
    "archiver": "^6.0.1",
    "extract-zip": "^2.0.1",
    "fs-extra": "^11.2.0",
    "path": "^0.12.7",
    "uuid": "^9.0.1",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "vite": "^5.0.0",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  },
  "build": {
    "appId": "com.whatsapp.manager",
    "productName": "WhatsApp Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/main/**/*",
      "dist-renderer/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    }
  }
} 